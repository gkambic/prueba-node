<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/header') %>
  <title>Gestion de Usuarios</title>
  <link rel="stylesheet" href="css/tableStyle.css">
</head>
<body>
  <%- include('../partials/navigation') %>
  <h1>
    Usuarios
  </h1>

  <a href="/createUsuario" class="btn btn-outline-primary mt-4 a-margin">Nuevo</a>
  <div class="table-container">
    <table>
      <thead>
        <tr>
          <% Object.keys(datos[0]).forEach(function(key) { %>
            <% if (key === 'userid') { %>
              <th class="hidden-column"><%= key %></th>
            <% } else { %>
              <th><%= key %></th>
            <% } %>
          <% }); %>
        </tr>
      </thead>
      <tbody>
        <% datos.forEach(function(dato) { %>
          <tr>
            <% Object.keys(dato).forEach(function(key) { %>
              <% if (key === 'userid') { %>
                <td class="hidden-column"><%= dato[key] %></td>
              <% } else { %>
                <td><%= dato[key] %></td>
              <% } %>
            <% }); %>
            <td>
             <!--  <a href="/editUsuario/<%= dato.userid %>" class="btn btn-outline-info">Editar</a> -->
              <a href="/deleteUsuario/<%= dato.userid %>" class="btn btn-outline-danger">Borrar</a>
            </td>
          </tr>
        <% }); %>
        
      </tbody>
    </table>
  </div>

  <%- include('../partials/footer') %>
</body>
</html>
